<div class='row'>
  <div class='col-auto'>
    <h2>{{name}}!</h2>
  </div>
</div>

{{> recipeList }}

  <div class='col-md-6'>

    <h3>{{recipe.name}}</h3>
    <h4>Ingredients</h4>
    <ul>
        {{#each recipe.recipe_ingredients as |ingredient|}}
        <li>{{ingredient.name}}</li>
        {{/each}}
    </ul>
    <h4>Steps</h4>
    <ol>
    {{#each recipe.steps as |step|}}
        <li>{{step.step}}</li>
    {{/each}}
    </ol>

  </div>

</div>