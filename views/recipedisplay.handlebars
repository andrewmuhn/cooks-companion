
<div class='row'>
  <div class='container' id="background-font">
    <h4 style="text-align: center;">{{name}}'s {{recipe.name}} Recipe</h4>

  </div>
</div>

<div class="row">
  <div class="col-md-5">
    {{> recipeList }}
  </div>

  <div class='col-md-6' id="background-font">

    {{!-- <h3>{{recipe.name}}</h3> --}}
    <br>
    <h4>Ingredients</h4>
    <ul>
      {{#each recipe.ingredients as |ingredient|}}
      <li>{{ingredient.recipe_ingredient.amount}} {{ingredient.recipe_ingredient.unit}} {{ingredient.name}}</li>
      {{/each}}
    </ul>
    <h4>Steps</h4>
    <ol>
      {{#each recipe.steps as |step|}}
      <li>{{step.step}}</li>
      {{/each}}
    </ol>

  </div>

</div>

</div>