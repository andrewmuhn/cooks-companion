<div class="row mt-4">

    {{#if recipes.length}}
    <div class="recipe-list">
        <h3>Saved Recipes:</h3>

        {{#each recipes as |recipe|}}
        <div class="row mb-2">
            <div class="col-6 align-self-start">
                <h3><a id="RLname" href="/recipes/{{recipe.id}}" onclick="event.stopPropagation();">{{recipe.name}}</a></h3>
            </div>
            <div class="col-4 align-self-end">
                <button class="btn btn-sm btn-danger" data-id="{{recipe.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>