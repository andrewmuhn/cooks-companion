<div class="row justify-content-center mt-4">

    {{#if recipes.length}}
    <div class="recipe-list justify-content-center">
        <h3>Saved Recipes:</h3>

        {{#each recipes as |recipe|}}
        <div class="row mb-2 align-items-center">
            <div class="col-6 align-self-start">
                <h3><a id="RLname" href="/recipes/{{recipe.id}}" onclick="event.stopPropagation();" class="text-nowrap">{{recipe.name}}</a></h3>
            </div>
            <div class="col-4">
                <button class="btn btn-sm btn-danger my-auto" data-id="{{recipe.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>
