<div class='row justify-content-center'>
  <div class='col-auto text-center'>
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row  mt-4">
    <div class="col-lg-4 col-md-12 col-sm-12 align-self-start p-4">
        {{> recipeList }}
    </div>
 
    
    <div class="col-lg-8 col-md-12 col-sm-12 align-self-end ">
        <h3>Create a New Recipe:</h3>

        <form class="form new-recipe-form">
            <div class="form-group">

                <label for="recipe-name">Recipe Name:</label>
                <input type="text" name="recipe-name" id="recipe-name" class="recipe-input"/>

                
                <div id="ingredient-container">
                    <div>
                    <label for="ingredient-name0">Ingredient:</label>
                    <input type="text" name="ingredient" id="ingrident-name0" class="ingredient-name recipe-input" />
                
                    <label for="number-input0">Number:</label>
                    <input type="number" id="number-input0" name="number" class="number-input recipe-input num-units"/>
                
                    <label for="unit-input0">Units:</label>
                    <input list="unit-options0" name="unit" id="unit-input0" class="unit-input recipe-input num-units" />
                    <datalist id="unit-options0">
                        <option value="tsp">
                        <option value="tbsp">
                        <option value="cup(s)">
                        <option value="qt">
                        <option value="gal">
                        <option value="lb">
                        <option value="oz">
                        <option value="pinch">
                        <option value=" ">
                    </datalist>
                    </div>
                </div>
                {{!-- <div id="ingredient-container"></div> --}}
                
                <button id="add-ingredient" class="btn btn-danger">Add Another Ingredient</button> 

                <div id="step-container">
                <label for="recipe-instructions">Instructions:</label> <br>
                <input class="recipe-input" type="text" id="recipe-steps" name="step" />
                </div>
                {{!-- <div ></div> --}}
                <button id="add-step" class="btn btn-danger">Add Another Step</button>

                <div class="row justify-content-center">
                   <button id='create-recipe' type="submit" class="btn btn-danger">Create</button> 
                </div>
                
            </div>

            {{!-- <div class="form-group">
                
            </div> --}}

            <div class="form-group">
            </div>

        </form>
    </div>

    
</div>

<script src="./js/recipe-input.js"></script>